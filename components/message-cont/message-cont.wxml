<view class="cont cont-{{flag ? 'selected' : ''}}">
  <!-- 物流基本信息 -->
  <view class="cont-box">
    <!-- 物流 -->
    <view class="delivery">
      <view class="delivery-text">物流：{{item.shipper}}</view>
      <view class="delivery-copy" catchtap="copyDelivery" data-text="{{item.delivery_no}}"></view>
      <view class="drop-btn" bindtap="detialDropDown"></view>
    </view>
    <!-- 订单编号 -->
    <view class="order-cont">
      订单编号：
      <text class="text-left">{{item.delivery_no}}</text>
      <text class="text-right" catchtap="copyDelivery" data-text="{{item.delivery_no}}">复制</text>
    </view>
    <!-- 发货时间 -->
    <view class="time">发货时间：{{item.delivery_time}}</view>
    <!-- 卡片数量 -->
    <view class="card-num">卡片数量：<text class="num">300张</text></view>
  </view>
  <!-- 物流详情（下拉） -->
  <view class="dropDown" style="display: block;">
    <!-- 隔断 -->
    <view class="divide"></view>
    <!-- 详情 -->
    <view class="dropDown-detail">
      <view class="detail-top">
        <view class="top-left">已签收</view>
        <view class="top-right">2023.04.12</view>
      </view>
      <text class="detail-bottom">xxxxxxxxxxxxxxxxxxx</text>
    </view>
  </view>
</view>
